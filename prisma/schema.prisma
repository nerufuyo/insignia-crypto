// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   @default("")
  token     String   @unique
  balance   Float    @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  sentTransactions     Transaction[] @relation("SentTransactions")
  receivedTransactions Transaction[] @relation("ReceivedTransactions")

  @@map("users")
  @@index([username])
  @@index([token])
}

model Transaction {
  id        String   @id @default(uuid())
  fromUsername String @map("from_username")
  toUsername   String @map("to_username")
  amount    Float
  type      String   // 'topup' or 'transfer'
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  fromUser User @relation("SentTransactions", fields: [fromUsername], references: [username])
  toUser   User @relation("ReceivedTransactions", fields: [toUsername], references: [username])

  @@map("transactions")
  @@index([fromUsername])
  @@index([toUsername])
  @@index([type])
  @@index([amount])
  @@index([createdAt])
}
